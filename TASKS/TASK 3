  background: white;
  padding: 30px;
  width: 400px;
  border-radius: 10px;
  text-align: center;
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
}
.quiz-box h2 {
  margin: 15px 0;
}
.options {
  display: flex;
  flex-direction: column;
  gap: 10px;
  margin-top: 20px;
}
.options button {
  padding: 10px;
  border: none;
  border-radius: 5px;
  background: #ff758c;
  color: white;
  cursor: pointer;
  font-size: 14px;
}
.options button:hover {
  background: #ff5c7a;
}
.score {

  margin-top: 20px;
  font-weight: bold;
}
